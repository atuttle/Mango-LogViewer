<project name="Mango-LogViewer" default="publish-to-test" basedir=".">

	<property name="dir.dev" value="${basedir}" />
	<property name="dir.test" value="/Users/adam/www/MangoDev/components/plugins/user/LogViewer/" />
	
	<!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->
	<!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->
	<target name="publish-to-test">
		<copy todir="${dir.test}" verbose="true">
			<fileset dir="${dir.dev}/LogViewer">
				<include name="*.cfc" />
				<include name="*.cfm" />
				<include name="*.xml" />
				<include name="icons/*.png" />
			</fileset>
		</copy>
	</target>
	
	<target name="make-zip">
		<delete file="${dir.dev}/build.zip" />
		<zip 
			destfile="${dir.dev}/build.zip"
			basedir="${dir.dev}"
			excludes="**/.DS_Store,build.xml,.git/**,.settings/**,.project"
		/>
	</target>

</project>